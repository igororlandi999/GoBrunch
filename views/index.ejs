<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista Dinâmica</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f4f4;
        }
        .container {
            display: flex;
            border: 1px solid #ccc;
            width: 80%;
            max-width: 900px;
            height: 400px;
            background-color: #fff;
        }
        .sidebar {
            width: 25%;
            padding: 20px;
            background-color: #ddd;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .main {
            width: 75%;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
            background-color: #e5e5e5;
            overflow-y: auto;
            max-height: 100%;
        }
        .input-group {
            text-align: center;
        }
        .list-item {
            display: flex;
            align-items: center;
            background-color: #888;
            color: #fff;
            padding: 10px;
            border-radius: 5px;
        }
        .circle {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #ccc;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-right: 10px;
        }
    </style>
    <script>
        function updateList() {
            const quantity = document.getElementById('quantity').value;
            fetch(`/items?quantity=${quantity}`)
                .then(response => response.json())
                .then(data => {
                    const list = document.getElementById('list');
                    list.innerHTML = '';  // Limpa a lista antes de adicionar novos itens
                    data.items.forEach((item, index) => {
                        const div = document.createElement('div');
                        div.className = 'list-item';
                        
                        const circle = document.createElement('div');
                        circle.className = 'circle';
                        circle.textContent = index + 1;
                        
                        const text = document.createElement('span');
                        text.textContent = item;
                        
                        div.appendChild(circle);
                        div.appendChild(text);
                        list.appendChild(div);
                    });
                })
                .catch(error => {
                    console.error('Erro ao buscar a lista:', error);
                });
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div class="input-group">
                <label for="quantity">Quantidade</label>
                <input type="number" id="quantity" min="1" oninput="updateList()" placeholder="Digite aqui">
            </div>
        </div>
        <div class="main" id="list">
            <!-- A lista dinâmica será inserida aqui -->
        </div>
    </div>
</body>
</html>
